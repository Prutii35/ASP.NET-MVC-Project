@model ProiectDaw.Models.Category
@{
    ViewBag.Title = "Editare categorie";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Category"))
{
    @Html.Hidden("CategoryId", Model.CategoryId)

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("CategoryName", "Denumire categorie")
    <br />
    @Html.Editor("CategoryName")
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
    <br /><br />

    @Html.Label("CategoryDescription", "Descriere categorie")
    <br />
    @Html.Editor("CategoryDescription")
    @Html.ValidationMessageFor(m => m.CategoryDescription, "", new { @class = "text-danger" })
    <br /><br />

    @Html.Label("CategoryPhoto", "Poza categorie")
    <br />
    @Html.Editor("CategoryPhoto")
    @Html.ValidationMessageFor(m => m.CategoryPhoto, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit">Modifica categoria</button>
}




